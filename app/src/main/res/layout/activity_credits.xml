<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifoAndroid.activities.list.Credits">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:text="Infos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView93"
                        android:textStyle="normal|bold"
                        android:textSize="20sp"
                        android:gravity="center"/>

                    <TextView
                        android:text="Dieses Projekt wurde vom Studiengang Informationsmanagement, im Laufe der Lehrveranstaltung SWENGB an der FH Joanneum entwickelt."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView94"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="Projektteam:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView96"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:text="László Baló\nlaszlo.balo@edu.fh-joanneum.at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView95"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="David Mischak\ndavid.mischak@edu.fh-joanneum.at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView98"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="Teresa Neuhold\nteresa.neuhold@edu.fh-joanneum.at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView99"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="Betreuer:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:text="Dipl.-Ing. Robert Ladstätter\nrobert.ladstaetter@fh-joanneum.at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView97"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="GitHub Repository:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView102"
                        android:textSize="18sp"
                        android:layout_marginTop="15dp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:text="https://github.com/Gulasch4ever/resifo-android.git"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView103"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:text="Impressum:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView100"
                        android:textSize="18sp"
                        android:layout_marginTop="30dp"
                        android:textStyle="normal|bold"/>

                    <TextView
                        android:text="FH JOANNEUM Gesellschaft mbH\nAlte Poststraße 149\nA-8020 Graz\nTelefon: +43 316 5453 - 0\nEmail: info@fh-joanneum.at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView101"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/exit_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/exitBtn"
        android:layout_alignParentRight="true" />

</RelativeLayout>
