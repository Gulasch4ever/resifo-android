                    android:layout_height="wrap_content"
                    android:id="@+id/textView94"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="Projektteam:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView96"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Laszlo Balo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView95"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="David Mischak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView98"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="Teresa Neuhold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView99"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:text="Impressum:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView100"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:text="FH JOANNEUM Gesellschaft mbH\nAlte PoststraÃŸe 149\nA-8020 Graz\nTelefon: +43 316 5453 - 0\nEmail: info@fh-joanneum.at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView101"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fh_logo"
                    android:id="@+id/imageView3"
                    android:layout_marginTop="0dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/exit_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/exitBtn"
        android:layout_alignParentRight="true" />

</RelativeLayout>
