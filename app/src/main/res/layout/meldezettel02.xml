<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifoAndroid.view.Meldezettel02">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button6">

        <TextView
            android:text="Geburtsdatum:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Geburtsdatum"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="@string/date_selected"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:gravity="center|fill"
                android:textColor="@android:color/black"/>

            <Button
                android:text="Datum"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:id="@+id/buttonDatum"
                android:textSize="12sp"
                android:layout_below="@+id/button80"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:onClick="setDate" />

        </LinearLayout>

        <TextView
            android:text="Geburtsort:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Geburtsort"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editText" />

        <TextView
            android:text="Religionsbekenntnis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Religionsbekenntnis"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editText3" />

        <TextView
            android:text="ZRM (falls bekannt):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ZRM"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/ZRMEingabe" />

        <TextView
            android:text="Staatsangehörigkeit:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Staatsangehörigkeit"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:text="Österreich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1"
                android:checked="false" />

            <RadioButton
                android:text="anderer Staat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1" />

        </RadioGroup>


    </LinearLayout>



    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minWidth="15dp"
        android:text="1"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="3"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="4"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button4"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="5"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="6"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="7"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:minWidth="15dp"
        android:text="2"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"/>

    <Button
        android:id="@+id/button98"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:minWidth="15dp"
        android:text="8"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonHilfe"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:text="Hilfe"
        android:textSize="12sp"
        android:layout_below="@+id/button98"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/nxtButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:src="@drawable/next_arrow_bootstrap" />

    </RelativeLayout>
</RelativeLayout>
